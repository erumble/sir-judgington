
.row
  .col-md-8.col-md-offset-2
    %table#dude.display
      %thead
        %tr
          %th Entry Number
          %th Name
          %th Email
          %th Character
          %th Property
          %th Skill Level
          %th Judging Time
          %th
      %tbody
        - @entries.each do |entry|
          %tr{:class => "#{(entry.id.odd? ? "odd-entry" : "")}"}
            %td= link_to entry.entry_num, entry_path(entry)
            %td
              - entry.cosplays.each do |cosplay|
                .row= cosplay.person_full_name.titleize
            %td
              - entry.cosplays.each do |cosplay|
                .row= cosplay.person_email
            %td
              - entry.cosplays.each do |cosplay|
                .row= cosplay.character_name.titleize
            %td
              - entry.cosplays.each do |cosplay|
                .row= cosplay.character_property.titleize
            %td= entry.skill_level.titleize
            %td= entry.judging_time.time if entry.judging_time
            %td= link_to edit_button, edit_entry_path(entry)
