.container
  = simple_form_for @entry, defaults: { input_html: { class: "form-control" }, label_html: { class: "control-label" } } do |f|
    .row
      / Glorious Dropdown
      .col-lg-6
        = f.input :skill_level,                              |
          collection: Entry.skill_levels,                    |
          label_method: lambda { |obj| obj.first.titleize }, |
          value_method: :first,                              |
          input_html: { class: 'form-control span4' }        |
        -#
      .col-lg-6
        = f.association :judging_time,                      |
          collection: Contest.last.available_judging_times, |
          label_method: :time,                              |
          value_method: :id,                                |
          include_blank: false,                             |
          input_html: { class: 'form-control span4' }       |
        -#
    .row
      .col-lg-6.col-lg-offset-6
        = f.association :contest, |
          label_method: :date,    |
          value_method: :id,      |
          include_blank: false    |
        -#
    .row
      .col-lg-6
        .col-lg-6
          = f.association :categories,                        |
            as: :check_boxes,                                 |
            collection: Contest.last.categories,              |
            label_method: lambda { |obj| obj.name.titleize }, |
            input_html: { class: "checkbox" }                 |
          -#
    .row
      %p Yo Dawg, heard you liked entries

      #cosplays
        = f.simple_fields_for :cosplays do |cosplay|
          = render 'cosplay_fields', :f => cosplay
        .links
          = link_to_add_association plus_button, f, :cosplays, :render_options => {:wrapper => 'bootstrap' }
      -# = f.submit
    = f.button :submit, class: 'btn-primary pull-right'
