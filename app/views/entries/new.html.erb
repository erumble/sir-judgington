<%= simple_form_for @entry do |f| %>
  <%= simple_fields_for :contestants do |c| %>
    <%= c.input :first_name %>
    <%= c.input :last_name %>
    <%= c.input :email %>
  <% end %>
  <%= simple_fields_for :costume do |costume| %>
    <%= costume.input :character_name %>
    <%= costume.input :property %>
  <% end %>
  <%= f.association :contest %>
  <%= f.button :submit %>
<% end %>
