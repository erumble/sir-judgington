<div class="row">
  <div class="row col-md-6 col-md-offset-3">
    <%= simple_form_for @entry, defaults: { input_html: { class: "form-control" }, label_html: { class: "control-label" } } do |f| %>
    <%= simple_fields_for :person do |person| %>
    <div class="row form-group">
      <div class="col-md-6">
        <%= person.text_field :first_name, placeholder: "First name", class: "form-control" %>
      </div>
      <div class="col-md-6">
        <%= person.text_field :last_name, placeholder: "Last name", class: "form-control" %>
      </div>
    </div>
    <div class="row form-group">
      <div class="col-md-6">
        <%= person.text_field :phonetic_spelling, placeholder: "Phonetic spelling", class: "form-control col-md-6" %>
      </div>
      <div class="col-md-6">
        <%= person.text_field :email, placeholder: "Email", class: "form-control col-md-6" %>
      </div>
    </div>
    <div class="row form-group">
      <%= simple_fields_for :character do |character| %>
      <div class="col-md-6">
        <%= character.text_field :name, placeholder: "Character name", class: "form-control col-md-6" %>
      </div>
      <div class="col-md-6">
        <%= character.text_field :property, placeholder: "Intellectual property", class: "form-control col-md-6"  %>
      </div>
      <% end %>
    </div>
    <% end %>


    <!-- Glorious Dropdown -->
    <%= f.input :skill_level,
    collection: Entry.skill_levels,
    label_method: lambda { |obj| obj.first.titleize },
    value_method: :first %>

    <%= f.association :judging_time,
    collection: Contest.last.available_judging_times,
    label_method: :time,
    value_method: :id,
    include_blank: false %>

    <%= f.association :contest,
    label_method: :date,
    value_method: :id,
    include_blank: false %>

    <%= f.association :categories,
    as: :check_boxes,
    collection: Contest.last.categories,
    label_method: lambda { |obj| obj.name.titleize },
    input_html: { class: "checkbox" } %>

    <%= f.button :submit %>
    <% end %>

  </div>

</div>
