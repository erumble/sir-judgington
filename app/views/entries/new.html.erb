<%= simple_form_for @entry do |f| %>
  <%= simple_fields_for :person do |person| %>
    <%= person.input :first_name %>
    <%= person.input :last_name %>
    <%= person.input :phonetic_spelling %>
    <%= person.input :email %>
  <% end %>
  <%= simple_fields_for :character do |character| %>
    <%= character.input :name %>
    <%= character.input :property %>
  <% end %>

  <!-- Glorious Dropdown -->
  <%= f.input :skill_level,
              collection: Entry.skill_levels,
              label_method: lambda { |obj| obj.first.titleize },
              value_method: :first %>

  <%= f.association :judging_time,
                    collection: Contest.last.available_judging_times,
                    label_method: :time,
                    value_method: :id,
                    include_blank: false %>

  <%= f.association :contest,
                    label_method: :date,
                    value_method: :id,
                    include_blank: false %>

  <%= f.association :categories,
                    as: :check_boxes,
                    collection: Contest.last.categories,
                    label_method: lambda { |obj| obj.name.titleize } %>

  <%= f.button :submit %>
<% end %>
